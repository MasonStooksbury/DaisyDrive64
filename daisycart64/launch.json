{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Daisy Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath": "arm-none-eabi-gdb",
            "device": "STM32H7",
            "configFiles": [
                "interface/stm23h7.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "C:/Programming/n64/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true,
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "searchDir": [ "C:/Programming/Game.N.Watch/openocd-code/src" ]
        }
    ]
}